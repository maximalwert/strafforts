<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <section class="sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <div class="text-center user-panel">
      <!-- Sidebar user panel -->
      <div class="image">
        <span class="athlete-link">
          <% if @athlete.profile_image_url.nil? %>
          <img alt="User Image" class="athlete-image img-circle" src="<%= asset_path('strava-profile.png') %>">
        <% else %>
          <img alt="User Image" class="athlete-image img-circle" src="<%= @athlete.profile_image_url %>">
          <% end %>
        </span>
      </div>

      <div class="info">
        <span id="athlete-id" class="hidden"><%= @athlete.id %></span>
        <span class="athlete-name"><%= @athlete.display_name %></span>
        <% unless @athlete.display_location.blank? %>
          <p><small class="athlete-location"><%= @athlete.display_location %></small></p>
        <% end %>
      </div>
    </div>

    <ul class="sidebar-menu" data-widget="tree">
      <li>
        <a class="show-overview treeview-header" href="?view=overview">
          <i class="fa fa-home"></i>
          <span>Overview</span>
        </a>
      </li>

      <li>
        <a class="show-races-timeline treeview-header" href="?view=timeline&type=races">
          <i class="fa fa-calendar"></i>
          <span>Races Timeline</span>
        </a>
      </li>

      <li class="active treeview">
        <a class="treeview-header disabled" href="#">
          <i class="fa fa-trophy"></i>
          <span>PBs by Distance</span>
        </a>

        <ul class="treeview-menu">
          <li id="treeview-menu-best-efforts-for-distance" class="treeview-expander treeview">
            <a href="#" class="show-more-distance">
              <i class="fa fa-circle-o"></i>More Distances
              <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
            </a>

            <ul class="treeview-menu"></ul>
          </li>
        </ul>
      </li>

      <li class="active treeview">
        <a class="treeview-header disabled" href="#">
          <i class="fa fa-pie-chart"></i>
          <span>Races by Distance</span>
        </a>

        <ul class="treeview-menu">

          <li id="treeview-menu-races-for-distance" class="treeview-expander treeview">
            <a href="#" class="show-more-distance">
              <i class="fa fa-circle-o"></i>More Distances
              <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
            </a>

            <ul class="treeview-menu"></ul>
          </li>
        </ul>
      </li>

      <li class="active treeview">
        <a class="treeview-header disabled" href="#">
          <i class="fa fa-line-chart"></i>
          <span>Races by Year</span>
        </a>

        <ul class="treeview-menu">
          <li id="treeview-menu-races-for-year" class="hidden"></li>
        </ul>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>