<header class="main-header">
  <a class="logo" title="Strafforts" href="/">
    <!-- Logo -->
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini">
      <b>S</b>FTS</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg">
      <b>Stra</b>fforts</span>
  </a>

  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">

    <!-- Sidebar toggle button-->
    <a class="sidebar-toggle" title="Toggle Navigation Sidebar" data-toggle="offcanvas" href="#" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <% if @athlete.profile_image_url.nil? %>
                <img alt="User Image" class="athlete-image user-image" src="<%= asset_path('strava-profile.png') %>">
            <% else %>
                <img alt="User Image" class="athlete-image user-image" src="<%= @athlete.profile_image_url %>">
            <% end %>
            <span class="hidden-xs athlete-name"><%= @athlete.fullname %></span>
          </a>

          <ul class="dropdown-menu">
            <li class="user-header">
              <a class="athlete-link external" href="<%= @athlete_profile_url %>" target="_blank">
                <% if @athlete.profile_image_url.nil? %>
                    <img alt="User Image" class="athlete-image img-circle" src="<%= asset_path('strava-profile.png') %>">
                <% else %>
                    <img alt="User Image" class="athlete-image img-circle" src="<%= @athlete.profile_image_url %>">
                <% end %>
              </a>
              <p>
                <span class="athlete-name"><%= @athlete.fullname %></span>
              </p>
              <p>
                <small class="athlete-location"><%= @athlete.location %></small>
              </p>
            </li>

            <!-- Menu Body -->
            <li class="user-body">
              <div class="row">
                <div class="col-xs-4 text-center">
                  Following<br/>
                  <a class="athlete-following external" title="Following" href="<%= @athlete.following_url %>" target="_blank">
                    <%= @athlete.friend_count %>
                  </a>
                </div>

                <div class="col-xs-4 text-center">
                  <a href="#"></a>
                </div>

                <div class="col-xs-4 text-center">
                  Follower<br/>
                  <a class="athlete-follower external" title="Follower" href="<%= @athlete.follower_url %>" target="_blank">
                    <%= @athlete.follower_count %>
                  </a>
                </div>
              </div>
            </li>
          </ul>
        </li>
        <li>
          <a class="social-sharing-toggle" href="#" data-toggle="modal" data-target="#modal-social-sharing" title="Share <% if @is_current_user %>Your<% else %>This<% end %> Profile">
            <i class="fa fa-share-alt"></i>
          </a>
        </li>
        <% if @is_current_user %>
          <li>
            <a href="#" class="control-sidebar-toggle" data-toggle="control-sidebar" title="Show Settings">
              <i class="fa fa-gears"></i>
            </a>
          </li>
        <% end %>
      </ul>
  </ul>
</div>
</nav>
</header>

<!-- Modal - Heart Rate Zones -->
<div class="modal" id="modal-social-sharing" tabindex="-1" role="dialog" aria-labelledby="modal-social-sharing-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="modal-social-sharing-label">
          Share <% if @is_current_user %>Your<% else %>This<% end %> Profile
        </h4>
      </div>
      <div class="modal-body">
        <% if @is_current_user %>
          <p class="text-center"><strong>Remember to set your profile to public before sharing your profile.</strong></p>
        <% end %>
        <!-- Go to www.addthis.com/dashboard to customize your tools -->
        <div class="addthis_inline_share_toolbox text-center"></div>
        <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5945b04103f9ff79"></script> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default text-center" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>